<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mainViewModel"
            type="com.haechan.retricatest.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="main image view"
            android:src="@drawable/image"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.haechan.retricatest.CustomSeekBar
            android:id="@+id/sb_main"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/iv_main"
            app:layout_constraintBottom_toTopOf="@id/btn_grey_scale"
            android:layout_marginHorizontal="100dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{@string/slider_value_format(mainViewModel.sliderValue)}"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toStartOf="@id/sb_main"
            app:layout_constraintTop_toTopOf="@id/sb_main"
            app:layout_constraintBottom_toBottomOf="@id/sb_main"
            tools:text="0%"/>

        <ImageButton
            android:id="@+id/btn_grey_scale"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/grey_scale"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_grey"
            android:padding="12dp"
            android:contentDescription="button to convert to grey scale"
            app:layout_constraintTop_toBottomOf="@id/iv_main"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_increase_luminosity" />

        <ImageButton
            android:id="@+id/btn_increase_luminosity"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/luminosity"
            android:scaleType="fitCenter"
            android:background="@drawable/circle_grey"
            android:padding="12dp"
            android:contentDescription="button to increase luminosity"
            app:layout_constraintTop_toTopOf="@id/btn_grey_scale"
            app:layout_constraintBottom_toBottomOf="@id/btn_grey_scale"
            app:layout_constraintStart_toEndOf="@id/btn_grey_scale"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>